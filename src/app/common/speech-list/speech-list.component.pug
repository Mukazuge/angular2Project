section#speech-list
    .card
        .card-header.p-0
            button.btn.btn-primary.btn-block.text-uppercase('(click)'='onCreateSpeech()')
                span.pr-2
                    i.fa.fa-plus
                | create

        ul.list-group
            li.list-group-item(
                *ngFor='let speech of speeches',
                '(click)'='selectSpeech(speech)',
                '[ngClass]'="{'active': speech === selectedSpeech}")
                    .author Author: {{speech.author}}
                    .subject Subject: {{speech.subject}}

        .card-footer.p-1
            app-search('(onSearch)'='onSearch($event)')